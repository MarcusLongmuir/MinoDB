.type_field{
	border: 1px solid @type_field_border;
	background-color: white;
	padding-top: 0px;

	margin-bottom: 10px;

	>.fv_field_title{
		display: none;
	}

	>.fv_input_holder{
		width: 100%;
		padding: 10px;
	}

	>.title{
		background-color: @type_field_title;
		.bold;
		color: white;
		padding: 5px;
		line-height: 16px;
		min-height: 16px;
	}

	.contents{
		padding: 5px;
	}

	&.fv_edit_mode{
		&.fv_nested{
			>.title{
				padding-left: 35px;
				padding-right: 35px;
			}
		}
	}
}
