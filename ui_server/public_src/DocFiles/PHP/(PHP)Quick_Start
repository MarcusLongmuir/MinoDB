	int(793)
	["Full Path"]=>
	string(23) "/ExampleUser/John Smith"
	["Created"]=>
	string(19) "2013-10-27 22:18:30"
	["Last Updated"]=>
	string(19) "2013-10-27 22:18:30"
	["Version"]=>
	int(1)
}

Get:
array(9) {
	["ID"]=>
	int(793)
	["Name"]=>
	string(10) "John Smith"
	["Folder"]=>
	bool(false)
	["Path"]=>
	string(13) "/ExampleUser/"
	["Full Path"]=>
	string(23) "/ExampleUser/John Smith"
	["Created"]=>
	string(19) "2013-10-27 22:18:30"
	["Last Updated"]=>
	string(19) "2013-10-27 22:18:30"
	["Version"]=>
	int(1)
	["ExampleUser.Person.1"]=>
	array(3) {
		["First Name"]=>
		string(4) "John"
		["Last Name"]=>
		string(5) "Smith"
		["Date of Birth"]=>
		string(10) "1985-05-11"
	}
}
</pre>